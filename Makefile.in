_PATH   = $(patsubst $(monkey_root)/%, %, $(CURDIR))
CC      = @echo "  CC   $(_PATH)/$@"; $CC
CC_QUIET= @echo -n; $CC
CFLAGS  = $CFLAGS
LDFLAGS = $LDFLAGS
DEFS    = $DEFS
INCDIR  = ../../../../src/include -I../../src -Ideps/libmariadbclient/include
OBJECTS = duda_package.o mariadb.o connection.o query.o
SOURCES = duda_package.c mariadb.c connection.c query.c

all: ../mariadb.dpkg

-include $(OBJECTS:.o=.d)

../mariadb.dpkg: $(OBJECTS)
	$(CC) $(CFLAGS) $(LDFLAGS) $(DEFS) -shared -o $@ $^ -lc -lmysqlclient

.c.o: $(SOURCES)
	$(CC) $(CFLAGS) $(DEFS) -I$(INCDIR) -fPIC -c $<
	$(CC_QUIET) -MM -MP $(CFLAGS) $(DEFS) -I$(INCDIR) $*.c -o $*.d > /dev/null &2>&1

clean:
	rm -rf *~ *.o
